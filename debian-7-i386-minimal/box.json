{
  "push": {
    "name": "analogeryuta/debian-7-i386-minimal"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US ",
        "auto=true ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "netcfg/get_hostname={{ .Name }} ",
        "netcfg/get_domain={{ .Name }}.localdomain ",
        "fb=false",
        "debconf/frontend=noninteractive ",
        "console-setup/ask_detect=false ",
        "console-keymaps-at/keymap=us ",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "Debian",
      "disk_size":"10000",
      "headless": false,
      "http_directory": "./",
      "iso_checksum": "55312b562c4559187bb175959eacb783ab3ab15ff882bd6ad171e8159850a767",
      "iso_checksum_type": "sha256",
      "iso_url": "http://ftp.jaist.ac.jp/pub/Linux/debian-cd/7.7.0/i386/iso-cd/debian-7.7.0-i386-netinst.iso",
      "shutdown_command": "echo 'vagrant'| sudo -S /sbin/shutdown -hP now",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "1200s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--pae",
          "on"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "2"
        ]
      ],
      "vm_name": "box"
    }
  ],
  "post-processors": [
    {
      "output": "debian-7-i386-minimal.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant'| sudo -S sh '{{ .Path }}'",
      "scripts": [
        "./postinstall/base.sh",
        "./postinstall/puppet.sh",
        "./postinstall/vagrant.sh",
        "./postinstall/virtualbox.sh"
      ],
      "type": "shell"
    }
  ]
}
